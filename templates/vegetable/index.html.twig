{% extends 'base.html.twig' %}

{% block title %}Vegetable index{% endblock %}

{% block body %}
    <h1>Vegetable index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vegetable in vegetables %}
            <tr>
                <td>{{ vegetable.id }}</td>
                <td>{{ vegetable.name }}</td>
                <td>
                    <a href="{{ path('vegetable_show', {'id': vegetable.id}) }}">show</a>
                    <a href="{{ path('vegetable_edit', {'id': vegetable.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vegetable_new') }}">Create new</a>
{% endblock %}
